{
    "compilerOptions": {
        "target": "ES2016", //编译转换后代码的版本
        "module": "CommonJS", //编译结果中使用的模块化标准
        "lib": [
            "ES2016"
        ],
        "outDir": "./dist", //输出目录
        "sourceMap": true, //资源地图
        "strict": true, //严格模式
        "removeComments": true, //编译结果移除注释
        "esModuleInterop": true, //启用es模块化交互非es模块导出
        "moduleResolution": "node", //设置解析模块的模式
        // "isolatedModules": true    //
        "noEmitOnError": true, //错误时不生成编译结果
        // "strictPropertyInitialization": true, //更加严格的检查类中的属性初始化
    },
    "include": [
        "./src/index.ts"
    ],
}